import java.util.ArrayList;

public class App {

    public static void main(String[] args) throws Exception {
        
        ArrayList<Integer> numeros = new ArrayList<>(); 

        numeros.add(88);
        numeros.add(8);
        numeros.add(4);
        numeros.add(6);
        numeros.add(10);
        numeros.add(15);
        numeros.add (99);
        numeros.add (888);

        System.out.println("El tama√±o de los nodos de la lista es :"+ numeros.size());    
        for (int numero = 0; numero < numeros.size(); numero++) {
            System.out.println("El elemento con indice "+ numero + " : "+ numeros.get(numero)); 
        }
    }
}
